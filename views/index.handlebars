<img src="../public/assets/img/burger-icon.png" alt="Burger Icon">

<h1>EAT-DA-BURGER!</h1>

<h2>Havent eaten</h2>
<ul>
  {{#each burger_name}}
    {{#unless devoured}}
      {{!-- {{> burgers/burger-block devoured = false}}  --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Gone</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{!-- {{> burgers/burger-block devoured = true}} --}}
    {{/if}}
  {{/each}}
</ul>


{{!-- ADDING A BURGER --}}
<form class="create-form">

  <div class="form-group">
    <input type="text" name="burger_name">
  </div>

  <button type="submit">Add Burger!</button>
</form>
